<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/find_group_background">


    <ImageView
        android:id="@+id/signgroupprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/find_group_profile" />

    <TextView
        android:id="@+id/groupinfo_sign"
        android:layout_width="226dp"
        android:layout_height="136dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/find_group_box2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signgroupprofile" />

    <ImageButton
        android:id="@+id/SignupGroup"
        android:layout_width="142dp"
        android:layout_height="73dp"
        android:layout_marginStart="36dp"
        android:background="#00ff0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/groupinfo_sign"
        app:layout_constraintVertical_bias="0.343"
        app:srcCompat="@drawable/fg_join_button" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="147dp"
        android:layout_height="74dp"
        android:layout_marginTop="20dp"
        android:background="#00ff0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.669"
        app:layout_constraintStart_toEndOf="@+id/SignupGroup"
        app:layout_constraintTop_toBottomOf="@+id/groupinfo_sign"
        app:layout_constraintVertical_bias="0.285"
        app:srcCompat="@drawable/fg_cancle_button" />
</androidx.constraintlayout.widget.ConstraintLayout>